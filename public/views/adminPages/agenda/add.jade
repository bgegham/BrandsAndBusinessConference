extends ../../layouts/admin_layout

block specific_stylesheets
    link(rel='stylesheet', href='/css/admin.css')

block content
    include ../../static/_admin_header
    #wrapper
        include ../../static/_sidebar
        #page-content-wrapper
            .alert-control(style='display: none;')
                .alert
                    a.close(href="#",data-dismiss="alert",aria-label="close") &times;
                    strong
            .row
                .col-xs-12
                    .box.box-primary
                        .box-header.with-border
                            h3.box-title Create partner
                        form(method="post",role='form', action="/control/admin/agenda/add")
                            .box-body
                                .row
                                    .col-xs-12.col-md-6
                                        .form-group
                                            label Date
                                            select.form-control(name="date")
                                                option(value="24/11/2016") 24/11/2016
                                                option(value="26/11/2016") 26/11/2016
                                        //.form-group
                                        //    label Place
                                        //    input.form-control(placeholder="Write place",type="text",name="place",required=true, value=(agenda && agenda.place) ? agenda.place : '')
                                        //    if errors && errors.errors.place
                                        //        p.text-error= errors.errors.place
                                        .form-group
                                            label Label
                                            input.form-control(placeholder="Write place",type="text",name="label",required=true, value=(agenda && agenda.place) ? agenda.place : '')
                                            if errors && errors.errors.label
                                                p.text-error= errors.errors.label
                                        .form-group
                                            label Time (hh:mm - hh:mm)
                                            input.form-control(placeholder="Write time",type="text",name="time",required=true, value=(agenda && agenda.time) ? agenda.time : '')
                                            if errors && errors.errors.time
                                                p.text-error= errors.errors.time
                                        .form-group
                                            label Date small (Nov 24)
                                            input.form-control(placeholder="Write date small",type="text",name="date_sm",required=true, value=(agenda && agenda.date_sm) ? agenda.date_sm : '')
                                            if errors && errors.errors.date_sm
                                                p.text-error= errors.errors.date_sm
                                        .form-group
                                            label Description
                                            textarea.form-control(rows="5",placeholder="Write description...",type="text",name="description", value=(agenda && agenda.description) ? agenda.description : '')
                                            if errors && errors.errors.description
                                                p.text-error= errors.errors.description
                                    .col-xs-12.col-md-6
                                        .form-group
                                            label Speakers
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker1")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker2")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker3")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker4")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker5")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker6")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker7")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker8")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker9")
                                            input.form-control(placeholder="Write speaker name/position",type="text",name="speaker10")
                                        .form-group
                                            label Border color (help:  #1288df   - blue)
                                            input.form-control(placeholder="Color code",type="text",name="color", value=(agenda && agenda.color) ? agenda.color : '')
                                            if errors && errors.errors.color
                                                p.text-error= errors.errors.color
                                        .form-group
                                            label Background color (help:  #ffffff   - white)
                                            input.form-control(placeholder="Color code",type="text",name="bgcolor", value=(agenda && agenda.bgcolor) ? agenda.bgcolor : '')
                                            if errors && errors.errors.bgcolor
                                                p.text-error= errors.errors.bgcolor
                                        .form-group
                                            label Priority in view
                                            input.form-control(placeholder="Priority",type="number",name="priority", value=(agenda && agenda.priority) ? agenda.priority : '')
                                            if errors && errors.errors.priority
                                                p.text-error= errors.errors.priority
                            .box-footer.text-right
                                button.btn.btn3d.btn-default(type='reset', style="margin-right:15px;") Reset
                                button.btn.btn3d.btn-success(type='submit') Create
