if _partnerData.length
    div#partners
        .container
            div
                .row
                    h1.txt-shadow Partners
                    hr
                .row
                    each item in _partnerData
                        .col-lg-3.col-md-4.col-xs-12.text-center
                            .prt-gallery.text-center
                                figure
                                    a.prt-gallerynail(href="#{item.link}", target="_blank")
                                        img.img-responsive( src="/images/"+item.avatar alt="")
